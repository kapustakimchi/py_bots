                         "CAACAgQAAxkBAAEFKiRivY3eOA90PGOdzoined4rgQiDuQACLQoAAsd-yVOwksgWYwyXQCkE")




def scheduled_msg():
    schedule.every().day.at("12:25").do(msg)

    while True:
        schedule.run_pending()
        time.sleep(1)

def main_loop():
    thread = Thread(target=scheduled_msg)
    thread.start()

    bot.polling(True)


if __name__ == '__main__':
    main_loop()
