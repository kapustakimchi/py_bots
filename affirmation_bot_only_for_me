import telebot
import config
import schedule
import time
import random
from threading import Thread

bot = telebot.TeleBot(config.TOKEN)


@bot.message_handler(commands=['start'])
def welcome(message):
    global user_id
    user_id = message.from_user.id
    bot.send_message(message.chat.id, '–ü—Ä–∏–≤–µ—Ç! –≠—Ç–æ —Å–∫—Ä–æ–º–Ω—ã–π –±–æ—Ç–∏–∫ —Å –∞—Ñ—Ñ–∏—Ä–º–∞—Ü–∏—è–º–∏!\n'
                                      '–ö–∞–∂–¥—ã–π –¥–µ–Ω—å –≤ 6:50 —Ç—ã –±—É–¥–µ—à—å –ø–æ–ª—É—á–∞—Ç—å –æ–¥–Ω—É —Ñ—Ä–∞–∑—É —Å –º–∏–ª—ã–º —Å—Ç–∏–∫–µ—Ä–æ–º.\n'
                                      '–û–Ω–∏ –ø–æ–º–æ–≥—É—Ç —Ç–≤–æ–µ–º—É –Ω–∞—Å—Ç—Ä–æ—é –Ω–∞ –¥–µ–Ω—å!üê≤')

    bot.send_sticker(message.chat.id, "CAACAgQAAxkBAAEFKF9ivG8x0PCt8XPFZk6j2XiPPi2-eQACjQoAAi8iyVM19uEzTtSQZikE")


@bot.message_handler(content_types=['text'])
def msg():
    # bot.send_message(message.chat.id, 'I love you')

    randnum = random.randint(1, 10)
    if randnum == 1:
        bot.send_message(user_id, '–°–µ–≥–æ–¥–Ω—è –º–µ–Ω—è –ø–µ—Ä–µ–ø–æ–ª–Ω—è–µ—Ç —ç–Ω–µ—Ä–≥–∏—è –∏ –ø–æ–∑–∏—Ç–∏–≤–Ω—ã–π –Ω–∞—Å—Ç—Ä–æ–π')
